# ---- Docker Image Owner (GitHub username, lowercase) -------
DOCKER_IMAGE_OWNER=your_github_username

# ---- Database --------------------------------------------------
POSTGRES_USER=proselitigant
POSTGRES_PASSWORD=change_me_secure_password
POSTGRES_DB=pro_se_litigant

# ---- API Server ------------------------------------------------
PORT=4000
NODE_ENV=production

# ---- CORS / URLs -----------------------------------------------
CORS_ORIGIN=https://yourdomain.com
NEXT_PUBLIC_API_URL=https://api.yourdomain.com

# ---- Rate Limiting ---------------------------------------------
THROTTLE_TTL=60
THROTTLE_LIMIT=100

# ---- JWT -------------------------------------------------------
# Use a long, random string (e.g. openssl rand -hex 32)
JWT_SECRET=replace_with_a_secure_random_string

# ---- Stripe ----------------------------------------------------
STRIPE_API_KEY=your_stripe_publishable_or_secret_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret

# ---- OpenAI ----------------------------------------------------
OPENAI_API_KEY=your_openai_api_key

# ---- Let's Encrypt (SSL) ---------------------------------------
LETSENCRYPT_EMAIL=your_email@example.com
